<% layout('layouts/boilerplate') %>

<div class="row">
  <div class="col-6">
    <div class="card mb-3">
      <img src="<%= camp.image %>" alt="">
      <div class="card-body">
        <h5 class="card-title"><%= camp.name %> </h5>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= camp.description %></li>
        <li class="list-group-item text-muted"><%= camp.location %></li>
        <li class="list-group-item">Suggested by <%= camp.author.username %></li>
        <li class="list-group-item">Rs. <%= camp.price %></li>
      </ul>
      <% if (currentUser && camp.author.equals(currentUser._id)) {%>
        <div class="card-body">
          <a href='/campgrounds/<%=camp._id%>/edit' class="card-link btn btn-warning">Edit Campground</a>
            <form class="d-inline" action="/campgrounds/<%=camp._id%>?_method=delete" method="post">
              <button class="card-link btn btn-danger">Delete</button>
            </form>
        </div>
      <% } %>
      <div class="card-footer text-body-secondary">
        2 days ago
      </div>
    </div>
    <a href='/campgrounds' class="card-link btn btn-info mx-auto mt-3 mb-3">All Campgrounds</a>
  </div>
  <div class="col-6">
    <% if (currentUser) { %>
      <h2 class="mb-3">Review the Campground</h2>
      <div class="card mb-3">
        <form action='/campgrounds/<%=camp._id%>/reviews' method="post" class="m-3 validated-form" novalidate>
          <div class="mb-3">
            <label class="form-label" for="ratings">Ratings</label>
            <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="ratings">
          </div>
          <div class="mb-3">
            <label for="body" class="form-label">
              Review
            </label>
            <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
            <div class="valid-feedback">
              Looks good!
          </div>
          </div>
          <button type="submit" class="btn btn-success">Submit</button>
        </form>
      </div>
    <% } %>
    <% for(let review of camp.reviews) {%>
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title">Rating: <%=review.rating%> </h5>
          <h6 class="card-subtitle mb-2 text-body-secondary text-muted">Submitted by <%=review.author.username%></h6>
          <p class="card-text"><b>Review:</b> <%=review.body%> </p>
          <% if (currentUser && camp.author.equals(currentUser._id)) {%>
            <form action="/campgrounds/<%=camp._id%>/reviews/<%=review._id%>?_method=DELETE" method="post">
              <button class="btn btn-sm btn-danger">Delete</button>
            </form>
          <% } %>
        </div>
      </div>
    <% } %>
  </div>
</div>