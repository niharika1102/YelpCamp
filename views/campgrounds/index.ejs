<% layout('layouts/boilerplate') %>

    <h1>

        All Campgrounds

    </h1>

    <a href='/campgrounds/new'>

        Create a new Campground!!

    </a>

    <ul>

        <% for (let camp of campgrounds) { %>
            <li>

                <a href="/campgrounds/<%= camp._id %>">
                    <%= camp.name %> 
                </a>
                <br>
                <%= camp.location%>
                <br>
                <br>

            </li>
        <% } %>

    </ul>